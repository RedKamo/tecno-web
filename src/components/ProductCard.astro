---
interface Props {
  icon: string;
  title: string;
  description: string;
  link: string;
}

const { icon, title, description, link } = Astro.props;
---
<a 
  href={link}
  class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition-all duration-300 group"
>
  <div class="flex flex-col items-start">
   <div class="  bg-sky-50 shadow rounded-lg">
    <img 
    src={icon}
    alt={title}
    class="h-10 w-10 p-2"
    loading="lazy"
  />
   </div>
    
    <h3 class="text-xl font-semibold mt-4 mb-2 text-left group-hover:text-sky-800 transition-colors">
      {title}
    </h3>
    
    <p class="text-gray-600 text-left text-sm leading-relaxed">
      {description}
    </p>
  </div>
</a>