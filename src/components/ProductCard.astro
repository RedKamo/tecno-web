---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
  link?: string;
}

const { title, description, icon, link } = Astro.props;
---

<a
  href={link}
  class="block h-full group hover:scale-[1.02] transition-all duration-300"
>
  <article
    class="h-full bg-white rounded-2xl p-8 shadow-sm group-hover:shadow-md transition-all duration-300 flex flex-col"
  >
    <div
      class="bg-sky-50 w-12 h-12 rounded-xl flex items-center justify-center mb-6"
    >
      <Icon name={icon} class="w-6 h-6 text-sky-600" />
    </div>

    <h3
      class="text-xl font-semibold text-gray-900 mb-4 group-hover:text-sky-700 transition-colors"
    >
      {title}
    </h3>

    <p class="text-gray-600 leading-relaxed flex-grow">
      {description}
    </p>
  </article>
</a>
