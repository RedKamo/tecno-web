---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import tecnoLogo from "../../public/tecno-logo.png";
---

<style>
  @media (max-width: 1024px) {
    .desktop-menu {
      display: none;
    }
    .mobile-menu-button {
      display: block;
    }
  }

  @media (min-width: 1025px) {
    .desktop-menu {
      display: flex;
    }
    .mobile-menu-button {
      display: none;
    }
  }

  .nav-item:hover .submenu,
  .nav-item:focus-within .submenu {
    display: block;
  }

  .submenu {
    display: none;
    position: absolute;
    left: 0;
    top: 100%;
    z-index: 50;
  }

  .nav-item {
    position: relative;
  }
  .header-transition {
    transition: all 0.3s ease-in-out;
  }

  .header-blur {
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.9);
  }

  header {
    z-index: 50;
  }

  body.overflow-hidden header {
    z-index: 40;
  }
</style>

<header
  class="sticky top-0 z-50 w-full header-transition header-blur border-b border-gray-100/50 shadow-sm"
>
  <div class="max-w-[1440px] mx-auto px-8 py-2">
    <nav class="flex items-center justify-between h-16">
      <a href="/" class="flex-shrink-0">
        <Image
          src={tecnoLogo}
          alt="Logo Tecnoevolución"
          class="h-10 w-auto object-contain"
          loading="eager"
        />
      </a>

      <div class="desktop-menu flex items-center space-x-6">
        <a
          href="/"
          class="hover:text-[#005D81] transition-colors whitespace-nowrap"
          >Inicio</a
        >
        <a
          href="/sobre-nosotros"
          class="hover:text-[#005D81] transition-colors whitespace-nowrap"
          >Sobre Nosotros</a
        >

        <a
          href="/#productos"
          class="hover:text-[#005D81] transition-colors whitespace-nowrap"
        >
          Productos y Servicios
        </a>
        <a
          href="/clientes"
          class="hover:text-[#005D81] transition-colors whitespace-nowrap"
          >Clientes</a
        >

        <a
          href="mailto:ventas@tecnoevolucion.com"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[#012537] text-white rounded-lg hover:bg-[#001824] transition-colors"
        >
          <img
            src="/icons/mail-icon.svg"
            alt="Ícono de contacto"
            class="w-5 h-5"
          />
          Contacto
        </a>
      </div>

      <div class="mobile-menu-button">
        <button
          id="menu-button"
          class="p-2 text-gray-600 hover:text-[#005D81] focus:outline-none"
          aria-label="Toggle menu"
        >
          <svg
            id="menu-icon-open"
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>
  </div>
</header>

<div
  id="mobile-menu"
  class="fixed inset-y-0 right-0 z-[60] w-64 bg-white shadow-xl transform translate-x-full transition-transform duration-300"
  aria-hidden="true"
>
  <div class="relative h-full">
    <button
      id="close-button"
      class="absolute top-4 left-4 text-gray-600 hover:text-[#012537] focus:outline-none"
      aria-label="Close menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="p-6 pt-16 space-y-4">
      <a href="/" class="block text-gray-800 hover:text-[#012537]">Inicio</a>
      <a href="/sobre-nosotros" class="block text-gray-800 hover:text-[#012537]"
        >Sobre nosotros</a
      >
      <a
        href="/#productos"
        class="block text-gray-800 hover:text-[#012537]"
        >Productos y Servicios</a
      >
      <a href="/clientes" class="block text-gray-800 hover:text-[#012537]"
        >Clientes</a
      >

      <a
        href="mailto:ventas@tecnoevolucion.com"
        class="inline-flex items-center gap-2 px-6 py-3 bg-[#012537] text-white rounded-lg hover:bg-[#001824] transition-colors w-full justify-center mt-6"
      >
        <Icon name="tabler:mail" class="w-5 h-5" />
        Contacto
      </a>
    </div>
  </div>
</div>

<div
  id="overlay"
  class="fixed inset-0 bg-black/80 hidden z-[55]"
  aria-hidden="true"
>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("menu-button");
    const closeButton = document.getElementById("close-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("overlay");
    const body = document.body;

    const openMenu = () => {
      mobileMenu.classList.remove("translate-x-full");
      overlay.classList.remove("hidden");
      mobileMenu.setAttribute("aria-hidden", "false");
      body.classList.add("overflow-hidden");
      document.querySelector("header").style.zIndex = "40";
    };

    const closeMenu = () => {
      mobileMenu.classList.add("translate-x-full");
      overlay.classList.add("hidden");
      mobileMenu.setAttribute("aria-hidden", "true");
      body.classList.remove("overflow-hidden");
      document.querySelector("header").style.zIndex = "50";
    };

    menuButton.addEventListener("click", openMenu);
    closeButton.addEventListener("click", closeMenu);
    overlay.addEventListener("click", closeMenu);

    const submenuButton = document.getElementById("submenu-button");
    const submenu = document.getElementById("submenu");
    const submenuIcon = document.getElementById("submenu-icon");

    submenuButton.addEventListener("click", function () {
      submenu.classList.toggle("hidden");
      submenuIcon.classList.toggle("rotate-180");
    });
  });
</script>

<script>
  const header = document.querySelector("header");
  let lastScroll = 0;

  window.addEventListener("scroll", () => {
    const currentScroll = window.scrollY;

    if (currentScroll > 0) {
      header.classList.add("scrolled");
    } else {
      header.classList.remove("scrolled");
    }

    lastScroll = currentScroll;
  });
</script>

<style>
  .scrolled {
    backdrop-filter: blur(12px);
    background-color: rgba(255, 255, 255, 0.95);
    border-color: rgba(229, 231, 235, 0.8);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('overlay');
    const menuLinks = document.querySelectorAll('a[href^="/#"]');

    const closeMenu = () => {
      mobileMenu.classList.add('translate-x-full');
      overlay.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
      document.querySelector('header').style.zIndex = '50';
    };

    menuLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href').split('#')[1];
        const targetSection = document.getElementById(targetId);

        if (targetSection) {
          closeMenu();

          setTimeout(() => {
            // Scroll
            const headerHeight = document.querySelector('header').offsetHeight;
            const targetPosition = targetSection.offsetTop - headerHeight;

            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
          }, 300);
        }
      });
    });
  });
</script>
