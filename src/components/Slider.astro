---
import { Image } from "astro:assets";
import { getAllClients } from "@/data/clients";
const clientLogos = getAllClients();
---

<section class="py-16 md:py-24">
  <div class="max-w-[1440px] mx-auto px-8">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">
        Empresas que confían en nosotros
      </h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Más de 15 instituciones financieras líderes en Latinoamérica han elegido
        nuestras soluciones
      </p>
    </div>

    <div class="relative">
      <div
        class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white to-transparent z-10"
        aria-hidden="true"
        role="presentation"
      >
      </div>
      <div
        class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent z-10"
        aria-hidden="true"
        role="presentation"
      >
      </div>
      <div class="overflow-hidden" role="region" aria-label="Logos de clientes">
        <ul class="flex animate-infinite-slider min-w-max" role="list">
          {
            clientLogos.concat(clientLogos).map((client) => (
              <li
                class="flex-shrink-0 p-4 flex items-center justify-center"
                role="listitem"
              >
                <div
                  class="group w-20 h-20 md:w-36 px-2 flex items-center justify-center rounded-lg overflow-hidden bg-white shadow-sm border border-gray-100 hover:shadow-md transition-all duration-300"
                  role="img"
                  aria-label={`Logo de ${client.alt}`}
                >
                  <Image
                    src={client.logo}
                    alt={client.alt}
                    width={144}
                    height={144}
                    class="max-w-full max-h-full object-contain filter grayscale transition duration-300 group-hover:filter-none"
                  />
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .animate-infinite-slider {
    animation: slide 40s linear infinite;
  }
</style>
