---
const clientlogos = [
{ logo: '/clientLogos/BBVA_2019.svg', alt: 'Logo BBVA' },
    { logo: '/clientLogos/banco_bogota.svg', alt: 'Logo Banco Bogot√°' },
    { logo: '/clientLogos/banco_colpatria.svg', alt: 'Logo Banco Colpatria' },
    { logo: '/clientLogos/banco_coop.svg', alt: 'Logo Banco Coop' },
    { logo: '/clientLogos/banco_mujer.svg', alt: 'Logo Banco Mujer' },
    { logo: '/clientLogos/banco_procredit.svg', alt: 'Logo Banco Procredit' },
    { logo: '/clientLogos/banco_santander.svg', alt: 'Logo Banco Santander' },
    { logo: '/clientLogos/mibancompartir.png', alt: 'Logo Bancompartir' },
    { logo: '/clientLogos/bayport_logo.png', alt: 'Logo Bayport' },
    { logo: '/clientLogos/comultrasan.svg', alt: 'Logo Comultrasan' },
    { logo: '/clientLogos/corpbanc.svg', alt: 'Logo Corpbanc' },
    { logo: '/clientLogos/cvu_logo.png', alt: 'Logo CVU' },
    { logo: '/clientLogos/fng-png.png', alt: 'Logo FNG' },
    { logo: '/clientLogos/logo-base-bot-sw.png', alt: 'Logo Base Bot' },
    { logo: '/clientLogos/logo-Colfondos-Habitat.png', alt: 'Logo Colfondos Habitat' },
    { logo: '/clientLogos/logoCH.png', alt: 'Logo CH' }
];


---


<div class="overflow-hidden mt-16 mb-12  lg:mt-32">
  <ul class="flex animate-infinite-slider min-w-max">
    {clientlogos.concat(clientlogos).map((clientLogo) => (
      <li class="flex-shrink-0 p-4 flex items-center justify-center ">
        <!-- Add 'group' class to enable group-hover -->
        <div class="group w-20 h-20 md:w-36 px-2 flex items-center justify-center rounded-md overflow-hidden bg-slate-50 border-2 border-slate-100">
          <img
            src={clientLogo.logo}
            alt={clientLogo.alt}
            class="max-w-full max-h-full object-contain filter grayscale transition duration-300 group-hover:filter-none"
          />
        </div>
      </li>
    ))}
  </ul>
</div>
