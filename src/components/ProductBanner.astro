---
// src/components/ProductBanner.astro
interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<section class="bg-sky-200 py-20">
  <div class="container mx-auto flex flex-col items-center text-center">
      <img src={icon} alt={title} class="h-24 w-24 mb-4" />
      <h1 class="text-5xl font-bold text-gray-800">{title}</h1>
    </div>
</section>