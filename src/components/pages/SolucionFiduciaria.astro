---
import { Icon } from "astro-icon/components";
import Layout from "@/layouts/Layout.astro";
import ProductBanner from "@/components/ProductBanner.astro";
import ProductCTA from "../ProductCTA.astro";
---

<Layout title="Solución Fiduciaria">
  <ProductBanner
    title="Solución Fiduciaria"
    iconName="tabler:briefcase"
    category="Solución Financiera"
    features={[
      "Fiducia de Inversión",
      "Gestión de Patrimonios",
      "Control Fiduciario",
    ]}
  />

  <div class="max-w-6xl mx-auto px-0 sm:px-8">
    <div class="py-16">
      <div class="px-4 sm:px-0">
        <h1 class="text-4xl font-bold mb-6">
          Solución Integral para el Sector Fiduciario
        </h1>
        <p class="text-base md:text-lg leading-relaxed mb-14">
          Esta solución está dirigida a las fiduciarias, permite el manejo
          eficaz de Fiducias de administración y pagos, convenios,
          administración de Patrimonios autónomos, Fiducias en garantía,
          Fiducias de inversión y Fondos de inversión.
        </p>

        <div
          class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-sky-600 to-sky-800 p-8 text-white mb-14"
        >
          <div class="relative z-10">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-white/10 p-3 rounded-lg">
                <Icon name="tabler:chart-pie" class="w-8 h-8" />
              </div>
              <h2 class="text-3xl font-semibold">Fiducia de inversión</h2>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
              <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
                <h3 class="font-semibold mb-3">Portafolios de inversión</h3>
                <p class="text-sky-100 text-sm">
                  Administración eficiente de portafolios y activos financieros
                </p>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
                <h3 class="font-semibold mb-3">Fondos de pensiones</h3>
                <p class="text-sky-100 text-sm">
                  Gestión de fondos de pensiones voluntarias
                </p>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
                <h3 class="font-semibold mb-3">Carteras colectivas</h3>
                <p class="text-sky-100 text-sm">
                  Control y seguimiento de carteras de inversión
                </p>
              </div>
            </div>
          </div>
          <div class="absolute right-0 bottom-0 opacity-10">
            <Icon name="tabler:circles" class="w-64 h-64" />
          </div>
        </div>

        <div class="mb-14">
          <h2 class="text-3xl font-semibold text-sky-700 mb-8">
            Fiducias de administración
          </h2>
          <div class="space-y-6">
            <div class="flex flex-col md:flex-row gap-6 items-start">
              <div class="flex-none">
                <div
                  class="w-12 h-12 bg-sky-100 rounded-full flex items-center justify-center"
                >
                  <Icon
                    name="tabler:shield-lock"
                    class="w-6 h-6 text-sky-600"
                  />
                </div>
              </div>
              <div class="flex-grow">
                <div
                  class="bg-white p-6 rounded-xl shadow-sm border border-sky-100"
                >
                  <h3 class="font-semibold text-lg mb-2">
                    Fiducias en garantía
                  </h3>
                  <p class="text-gray-600">
                    Gestión segura de garantías y respaldos financieros
                  </p>
                </div>
              </div>
            </div>

            <div class="flex flex-col md:flex-row gap-6 items-start">
              <div class="flex-none">
                <div
                  class="w-12 h-12 bg-sky-100 rounded-full flex items-center justify-center"
                >
                  <Icon name="tabler:cash" class="w-6 h-6 text-sky-600" />
                </div>
              </div>
              <div class="flex-grow">
                <div
                  class="bg-white p-6 rounded-xl shadow-sm border border-sky-100"
                >
                  <h3 class="font-semibold text-lg mb-2">Gestión financiera</h3>
                  <ul class="grid md:grid-cols-2 gap-4">
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:circle-check"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Cuentas por pagar y cobrar</span>
                    </li>
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:circle-check"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Inventario y facturas</span>
                    </li>
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:circle-check"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Tesorería de bancos</span>
                    </li>
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:circle-check"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Cartera de crédito pasiva</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-14">
          <h2 class="text-3xl font-semibold text-sky-700 mb-8">
            Administración
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
            <div
              class="md:col-span-2 bg-gradient-to-br from-sky-50 to-white p-6 rounded-xl"
            >
              <div class="flex items-center gap-3 mb-4">
                <Icon name="tabler:calculator" class="w-6 h-6 text-sky-600" />
                <h3 class="font-semibold">Contabilidad</h3>
              </div>
              <p class="text-gray-600 text-sm">
                Gestión contable integral y automatizada para todas tus
                operaciones
              </p>
            </div>

            <div
              class="md:col-span-4 bg-white p-6 rounded-xl border border-sky-100"
            >
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <h3 class="font-semibold mb-4">Gestión Operativa</h3>
                  <ul class="space-y-3">
                    <li class="flex items-center gap-2">
                      <Icon name="tabler:users" class="w-5 h-5 text-sky-500" />
                      <span>Cliente único</span>
                    </li>
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:file-analytics"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Módulo MIT</span>
                    </li>
                  </ul>
                </div>
                <div>
                  <h3 class="font-semibold mb-4">Control y Reportes</h3>
                  <ul class="space-y-3">
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:report-analytics"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Sistema gerencial</span>
                    </li>
                    <li class="flex items-center gap-2">
                      <Icon
                        name="tabler:shield-check"
                        class="w-5 h-5 text-sky-500"
                      />
                      <span>Administración y seguridad</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <ProductCTA
          title="¿Te gustaría conocer más sobre nuestra Solución Fiduciaria?"
          description="Estamos aquí para resolver todas tus dudas"
          showProductsButton={true}
          isProductPage={true}
        />
      </div>
    </div>
  </div>
</Layout>
