---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { getClientsByStatus } from "@/data/clients";

const clientesActivos = getClientsByStatus("active");
const clientesHistoricos = getClientsByStatus("historical");
---

<Layout title="Nuestros Clientes">
  <div class="bg-gradient-to-b from-sky-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Nuestros Clientes</h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          Más de 25 años respaldando el crecimiento del sector financiero en
          Colombia y Latinoamérica
        </p>
      </div>
    </div>
  </div>

  <div class="bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-8 py-16">
      <div class="mb-24">
        <h2 class="text-3xl font-semibold mb-12 text-center">
          Clientes Activos
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          {
            clientesActivos.map((client) => (
              <div class="flex items-center justify-center w-full">
                <div class="w-full aspect-[2/1] bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
                  <div class="w-full h-full flex items-center justify-center p-4">
                    <Image
                      src={client.logo}
                      alt={client.alt}
                      width={200}
                      height={100}
                      class="max-w-[85%] max-h-[85%] object-contain"
                    />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div>
        <h2 class="text-3xl font-semibold mb-12 text-center">
          Clientes Históricos
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          {
            clientesHistoricos.map((client) => (
              <div class="flex items-center justify-center w-full">
                <div class="w-full aspect-[2/1] bg-white rounded-xl shadow-sm">
                  <div class="w-full h-full flex items-center justify-center p-4">
                    <Image
                      src={client.logo}
                      alt={client.alt}
                      width={200}
                      height={100}
                      class="max-w-[85%] max-h-[85%] object-contain"
                    />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    display: block;
    margin: auto;
  }
</style>
