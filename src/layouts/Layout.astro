---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import '@fontsource-variable/onest';
//import TopBar from '@components/TopBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tecnoevolución Diálogo Software SAS: Soluciones de software y asesoría en sistemas de información financiera." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/public/favicon.ico">
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col items-center">
		<Header />
		<main class="w-full max-w-[1440px] flex flex-col px-4 sm:px-6 lg:px-8 ">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root{

	}
	
	html{
		font-family: 'Onest Variable', sans-serif;
	}
</style>
