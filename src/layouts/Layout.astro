---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Chat from "@/components/Chat.astro";
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tecnoevolución Diálogo Software SAS: Soluciones de software y asesoría en sistemas de información financiera."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/public/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col items-center">
    <Header />
    <main class="transition-fade flex-grow w-full max-w-[1440px] flex flex-col px-4 sm:px-6 lg:px-4">
      <slot />
    </main>
    <Footer />
    <Chat />
  </body>
</html>

<style is:global>
  :root {
  }

  html {
    font-family: "Onest Variable", sans-serif;
  }

  /* Chrome, Safari, Edge */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  ::-webkit-scrollbar-thumb {
    background: #0c4a6e;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #075985;
  }

  /*Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: #0c4a6e #f1f5f9;
  }

  /* Swup transitions */
  html.is-changing .transition-fade {
  transition: 0.4s;
  opacity: 1;
}
html.is-animating .transition-fade {
  opacity: 0;
}
</style>
